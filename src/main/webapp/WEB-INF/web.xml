<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <context-param>
    <param-name>relativeDatabaseConfigFileLocation</param-name>
    <param-value>/WEB-INF/classes/db.properties</param-value>
  </context-param>
  <context-param>
    <param-name>relativeTokenManagerConfigFileLocation</param-name>
    <param-value>/WEB-INF/classes/tokenManager.properties</param-value>
  </context-param>
  <context-param>
    <param-name>relativeBatchLogOutputDirectory</param-name>
    <param-value>/WEB-INF/logs/</param-value>
  </context-param>
  <context-param>
    <param-name>relativeErrorResponseConfigFileLocation</param-name>
    <param-value>/WEB-INF/classes/errorResponse.properties</param-value>
  </context-param>

  <filter>
    <filter-name>LoggingFilter</filter-name>
    <filter-class>com.local.servlet.LoggingFilter</filter-class>
  </filter>
  <filter>
    <filter-name>ErrorResponseFilter</filter-name>
    <filter-class>com.local.servlet.ErrorResponseFilter</filter-class>
  </filter>
  <filter>
    <filter-name>AdminAuthorizationFilter</filter-name>
    <filter-class>com.local.servlet.usermanagement.AdminAuthorizationFilter</filter-class>
  </filter>
  <filter>
    <filter-name>WebUserAuthorizationFilter</filter-name>
    <filter-class>com.local.servlet.usermanagement.WebUserAuthorizationFilter</filter-class>
  </filter>
  <filter>
    <filter-name>UserObjectValidationFilter</filter-name>
    <filter-class>com.local.servlet.usermanagement.UserObjectValidationFilter</filter-class>
  </filter>
  <filter>
    <filter-name>ProductObjectValidationFilter</filter-name>
    <filter-class>com.local.servlet.productmanagement.ProductObjectValidationFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>LoggingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>ErrorResponseFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AdminAuthorizationFilter</filter-name>
    <url-pattern>/add-user</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AdminAuthorizationFilter</filter-name>
    <url-pattern>/add-product</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>WebUserAuthorizationFilter</filter-name>
    <url-pattern>/get-products</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>UserObjectValidationFilter</filter-name>
    <url-pattern>/add-user</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>ProductObjectValidationFilter</filter-name>
    <url-pattern>/add-product</url-pattern>
  </filter-mapping>

  <listener>
    <listener-class>com.local.BootstrapListener</listener-class>
  </listener>

  <servlet>
    <servlet-name>AddUserServlet</servlet-name>
    <servlet-class>com.local.servlet.usermanagement.AddUserServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.local.servlet.usermanagement.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddProductServlet</servlet-name>
    <servlet-class>com.local.servlet.productmanagement.AddProductServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GetAllProductsServlet</servlet-name>
    <servlet-class>com.local.servlet.productmanagement.GetAllProductsServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AddUserServlet</servlet-name>
    <url-pattern>/add-user</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddProductServlet</servlet-name>
    <url-pattern>/add-product</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GetAllProductsServlet</servlet-name>
    <url-pattern>/get-products</url-pattern>
  </servlet-mapping>
</web-app>
